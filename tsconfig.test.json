{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./test",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
  },
  "include": [
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
}